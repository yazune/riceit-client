<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WelcomeScreenActivity"
    android:background="@color/white"
    android:padding="30dp">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get started!"
            android:textSize="36sp"
            android:textColor="@color/black"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/muli_black"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control your diet and track activities to improve the quality of Your life "
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/muli"
            android:textAllCaps="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/welcome_login_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="login"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:onClick="callLoginScreen"
                android:transitionName="transition_login"/>
            <Button
                android:id="@+id/welcome_register_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="register"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:onClick="callRegisterScreen"
                android:transitionName="transition_register"/>
        </LinearLayout>


    </LinearLayout>


</ScrollView>